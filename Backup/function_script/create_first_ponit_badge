-- FUNCTION: public.create_first_point_badge()

-- DROP FUNCTION IF EXISTS public.create_first_point_badge();

CREATE OR REPLACE FUNCTION public.create_first_point_badge()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
BEGIN
	IF (NEW.type = 'course') THEN 
		INSERT INTO achievements(user_id, badge_id, achieved_date)
		SELECT NEW.user_id, b.badge_id, now()
		FROM badges b WHERE badge_name = 'First Course';
	ELSIF (NEW.type = 'problem') THEN
		INSERT INTO achievements(user_id, badge_id, achieved_date)
		SELECT NEW.user_id, b.badge_id, now()
		FROM badges b WHERE badge_name = 'First Problem';
	END IF;
	RETURN NEW;
END;
$BODY$;

ALTER FUNCTION public.create_first_point_badge()
    OWNER TO postgres;
